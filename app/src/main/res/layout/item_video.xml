<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/text_view_file_name_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="10dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="13sp"
            />

        <TextView
            android:id="@+id/text_view_file_name_counting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/text_view_file_name_input"
            app:layout_constraintEnd_toEndOf="@id/image_view_video_play_button"
            android:text="-íšŒ"
            android:layout_marginStart="10dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="13sp"
            />

        <ImageView
            android:id="@+id/image_view_video_play_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/play_image"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/color_eeeeee"
            android:layout_marginTop="13dp"
            app:layout_constraintTop_toBottomOf="@id/image_view_video_play_button"
            />
<!--        app:layout_constraintTop_toBottomOf="@id/text_view_file_name_input"-->

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>