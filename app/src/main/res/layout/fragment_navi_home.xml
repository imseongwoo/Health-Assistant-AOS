                    android:textSize="12sp"
                    android:text="@string/text_view_latpulldown"
                    app:layout_constraintTop_toBottomOf="@id/image_view_latpulldown"
                    app:layout_constraintStart_toStartOf="@id/latpulldown_box"
                    app:layout_constraintEnd_toEndOf="@id/latpulldown_box"
                    android:textColor="@color/color_222222" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- 인클라인 벤치프레스 -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/incline_box"
                        android:layout_width="0dp"
                        android:layout_height="160dp"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:background="@drawable/rectangle_radius">

                <ImageView
                    android:id="@+id/image_view_incline"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/custom_lower_body"
                    android:clipToOutline="true"
                    android:gravity="center"
                    android:scaleType="centerCrop"
                    android:src="@drawable/incline_bench"
                    app:layout_constraintTop_toTopOf="@id/incline_box"
                    app:layout_constraintBottom_toBottomOf="@id/incline_box"
                    app:layout_constraintStart_toStartOf="@id/incline_box"
                    app:layout_constraintEnd_toEndOf="@id/incline_box"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/text_view_incline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="12sp"
                    android:text="@string/text_view_incline"
                    app:layout_constraintTop_toBottomOf="@id/image_view_incline"
                    app:layout_constraintStart_toStartOf="@id/incline_box"
                    app:layout_constraintEnd_toEndOf="@id/incline_box"
                    android:textColor="@color/color_222222" />

            </androidx.constraintlayout.widget.ConstraintLayout>
