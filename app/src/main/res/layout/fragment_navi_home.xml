                                    <TextView
                                        android:id="@+id/text_view_exercise_info3"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="10dp"
                                        android:layout_marginEnd="10dp"
                                        android:text=""
                                        android:textColor="@color/black"/>
