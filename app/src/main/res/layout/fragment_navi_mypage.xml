<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center">

    <data>

    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_efeff5"
            tools:context=".ui.home.fragment.NaviMyPageFragment">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar_mypage"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:title="마이페이지"
                    app:titleTextColor="@color/color_222222" />

                <TextView
                    android:id="@+id/mypage_big_title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/mypage_title"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    app:layout_constraintTop_toBottomOf="@id/toolbar_mypage"
                    />

                <TextView
                    android:id="@+id/mypage_radarchart_title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/mypage_radarchart_title"
                    android:textColor="@color/purple_500"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    app:layout_constraintTop_toBottomOf="@id/mypage_big_title"
                    />

                <com.github.mikephil.charting.charts.RadarChart
                    android:id="@+id/radarChart"
                    android:layout_width="match_parent"
                    android:layout_height="500dp"
                    android:layout_marginTop="0dp"
                    app:layout_constraintTop_toBottomOf="@id/mypage_radarchart_title" />

                <TextView
                    android:id="@+id/mypage_piechart_title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/mypage_piechart_title"
                    android:textColor="@color/purple_500"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    app:layout_constraintTop_toBottomOf="@id/radarChart"
                    />

                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/pieChart"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    app:layout_constraintTop_toBottomOf="@id/mypage_piechart_title"
                    >
                </com.github.mikephil.charting.charts.PieChart>

<!--                <com.github.mikephil.charting.charts.LineChart-->
<!--                    android:id="@+id/lineChart"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="500dp">-->
<!--                </com.github.mikephil.charting.charts.LineChart>-->

                <TextView
                    android:id="@+id/mypage_barchart_each_exercise_title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/mypage_barchart_each_exercise_title"
                    android:textColor="@color/purple_500"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    app:layout_constraintTop_toBottomOf="@id/pieChart"
                    />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/exercise_button_box"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="0dp"
                    app:layout_constraintTop_toBottomOf="@id/mypage_barchart_each_exercise_title">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/chart_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background_bluegrey"
                        android:padding="10dp"
                        android:text="@string/check_part_chart"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="60dp"
                        android:orientation="horizontal">

                        <Space
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/bench_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:background="@drawable/background_detail_textview"
                            android:text="@string/button_bench"
                            android:textSize="14sp" />

                        <Space
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/squat_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:background="@drawable/background_detail_textview"
                            android:text="@string/button_squat"
                            android:textSize="14sp" />

                        <Space
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/dead_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:background="@drawable/background_detail_textview"
                            android:text="@string/button_deadlift"
                            android:textSize="14sp" />

                        <Space
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="120dp"
                        android:orientation="horizontal">

                        <Space
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/incline_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:background="@drawable/background_detail_textview"
                            android:text="@string/button_incline_bench"
                            android:textSize="14sp" />

                        <Space
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/legex_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:background="@drawable/background_detail_textview"
                            android:text="@string/button_legex" />

                        <Space
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/crossover_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:background="@drawable/background_detail_textview"
                            android:text="@string/button_crossover"
                            android:textSize="14sp" />

                        <Space
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />
                    </LinearLayout>


                </androidx.constraintlayout.widget.ConstraintLayout>

                <LinearLayout
                    android:id="@+id/chart_name_text_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@id/exercise_button_box">

                    <TextView
                        android:id="@+id/chart_name_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="운동 이름"
                        android:textAlignment="center"
                        android:textSize="25sp" />
                </LinearLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/barChart_box"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginTop="0dp"
                    app:layout_constraintTop_toBottomOf="@id/chart_name_text_container">

                    <FrameLayout
                        android:id="@+id/frameLayout_barChart"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <com.github.mikephil.charting.charts.BarChart
                            android:id="@+id/chart_bench"
                            android:layout_width="match_parent"
                            android:layout_height="300dp">

                        </com.github.mikephil.charting.charts.BarChart>

                        <com.github.mikephil.charting.charts.BarChart
                            android:id="@+id/chart_squat"
                            android:layout_width="match_parent"
                            android:layout_height="300dp">

                        </com.github.mikephil.charting.charts.BarChart>

                        <com.github.mikephil.charting.charts.BarChart
                            android:id="@+id/chart_dead"
                            android:layout_width="match_parent"
                            android:layout_height="300dp">

                        </com.github.mikephil.charting.charts.BarChart>

                        <com.github.mikephil.charting.charts.BarChart
                            android:id="@+id/chart_incline"
                            android:layout_width="match_parent"
                            android:layout_height="300dp">

                        </com.github.mikephil.charting.charts.BarChart>

                        <com.github.mikephil.charting.charts.BarChart
                            android:id="@+id/chart_legex"
                            android:layout_width="match_parent"
                            android:layout_height="300dp">

                        </com.github.mikephil.charting.charts.BarChart>

                        <com.github.mikephil.charting.charts.BarChart
                            android:id="@+id/chart_crossover"
                            android:layout_width="match_parent"
                            android:layout_height="300dp">

                        </com.github.mikephil.charting.charts.BarChart>
                    </FrameLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/lineChart_box"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="50dp"
                app:layout_constraintTop_toBottomOf="@id/barChart_box">

                <FrameLayout
                    android:id="@+id/frameLayout_lineChart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/lineChart_bench"
                        android:layout_width="match_parent"
                        android:layout_height="500dp">
                    </com.github.mikephil.charting.charts.LineChart>

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/lineChart_squat"
                        android:layout_width="match_parent"
                        android:layout_height="500dp">
                    </com.github.mikephil.charting.charts.LineChart>

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/lineChart_dead"
                        android:layout_width="match_parent"
                        android:layout_height="500dp">
                    </com.github.mikephil.charting.charts.LineChart>

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/lineChart_incline"
                        android:layout_width="match_parent"
                        android:layout_height="500dp">
                    </com.github.mikephil.charting.charts.LineChart>

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/lineChart_legex"
                        android:layout_width="match_parent"
                        android:layout_height="500dp">
                    </com.github.mikephil.charting.charts.LineChart>

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/lineChart_crossover"
                        android:layout_width="match_parent"
                        android:layout_height="500dp">
                    </com.github.mikephil.charting.charts.LineChart>
                </FrameLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </FrameLayout>


    </androidx.core.widget.NestedScrollView>

</layout>