<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center">

    <data>

    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.home.fragment.NaviMyPageFragment">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_mypage"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:title="마이페이지" />

            <CalendarView
                android:id="@+id/calendar_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginTop="100dp" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraint_new_gym"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="430dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="18dp"
                android:paddingBottom="20dp">

                <TextView
                    android:id="@+id/my_page_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:text=""
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/view_pager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/background_detail_textview"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="4dp" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/text_view_my_ranking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="640dp"
                android:text="@string/ranking"
                android:textColor="@color/color_111111"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/chart_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="600dp"

                android:text="부위 별 차트 확인"
                android:textStyle="bold" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:layout_marginTop="650dp">

                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/chart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1150dp"
                android:orientation="horizontal">

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <Button
                    android:id="@+id/bench_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:paddingStart="2dp"
                    android:paddingEnd="2dp"
                    android:text="bench"
                    android:textSize="14sp" />
                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <Button
                    android:id="@+id/squat_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:paddingStart="2dp"
                    android:paddingEnd="2dp"
                    android:text="squat"
                    android:textSize="14sp" />
                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <Button
                    android:id="@+id/dead_btn"
                    android:layout_width="55dp"
                    android:layout_height="48dp"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:paddingStart="2dp"
                    android:paddingEnd="2dp"
                    android:text="dead"
                    android:textSize="14sp" />
                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <Button
                    android:id="@+id/incline_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:paddingStart="2dp"
                    android:paddingEnd="2dp"
                    android:text="incline"
                    android:textSize="14sp" />
                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <Button
                    android:id="@+id/legex_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:paddingStart="2dp"
                    android:paddingEnd="2dp"
                    android:text="legex"
                    android:textSize="14sp" />
                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <Button
                    android:id="@+id/crossover_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:paddingStart="2dp"
                    android:paddingEnd="2dp"
                    android:text="crossover"
                    android:textSize="14sp" />
                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginTop="1200dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.github.mikephil.charting.charts.BarChart
                        android:id="@+id/chart_bench"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </com.github.mikephil.charting.charts.BarChart>

                    <com.github.mikephil.charting.charts.BarChart
                        android:id="@+id/chart_squat"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </com.github.mikephil.charting.charts.BarChart>

                    <com.github.mikephil.charting.charts.BarChart
                        android:id="@+id/chart_dead"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </com.github.mikephil.charting.charts.BarChart>

                    <com.github.mikephil.charting.charts.BarChart
                        android:id="@+id/chart_incline"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </com.github.mikephil.charting.charts.BarChart>

                    <com.github.mikephil.charting.charts.BarChart
                        android:id="@+id/chart_legex"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </com.github.mikephil.charting.charts.BarChart>

                    <com.github.mikephil.charting.charts.BarChart
                        android:id="@+id/chart_crossover"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </com.github.mikephil.charting.charts.BarChart>
                </FrameLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>


        </FrameLayout>


    </androidx.core.widget.NestedScrollView>

</layout>