<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center">

    <data>

    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <FrameLayout
            android:id="@+id/fragmentContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_efeff5"
            tools:context=".ui.home.fragment.NaviMyPageFragment">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar_mypage"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:title=""
                    app:titleTextColor="@color/color_222222">

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="36dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/pofit_logo" />

                </androidx.appcompat.widget.Toolbar>

                <LinearLayout
                    android:id="@+id/chart_fragment_change"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/toolbar_mypage"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/total_chart_btn"
                        android:text="종합 차트"
                        android:layout_width="0dp"
                        android:textSize="16sp"
                        android:background="@drawable/button_selector"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/part_chart_btn"
                        android:text="운동 별 차트"
                        android:layout_width="0dp"
                        android:textSize="16sp"
                        android:background="@drawable/button_selector"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        />

                </LinearLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/exercise_button_box"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@id/chart_fragment_change">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="0dp"
                        android:orientation="horizontal">

                        <Space
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/bench_btn"
                            android:layout_width="120dp"
                            android:layout_height="48dp"
                            android:background="@drawable/button_selector"
                            android:text="@string/button_bench"
                            android:textSize="14sp" />

                        <Space
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/squat_btn"
                            android:layout_width="120dp"
                            android:layout_height="48dp"
                            android:background="@drawable/button_selector"
                            android:text="@string/button_squat"
                            android:textSize="14sp" />

                        <Space
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/dead_btn"
                            android:layout_width="120dp"
                            android:layout_height="48dp"
                            android:background="@drawable/button_selector"
                            android:text="@string/button_deadlift"
                            android:textSize="14sp" />

                        <Space
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="60dp"
                        android:orientation="horizontal">

                        <Space
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/incline_btn"
                            android:layout_width="120dp"
                            android:layout_height="48dp"
                            android:background="@drawable/button_selector"
                            android:text="@string/button_incline_bench"
                            android:textSize="14sp" />

                        <Space
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/legex_btn"
                            android:layout_width="120dp"
                            android:layout_height="48dp"
                            android:background="@drawable/button_selector"
                            android:text="@string/button_legex"
                            android:textSize="14sp"/>

                        <Space
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/latpull_btn"
                            android:layout_width="120dp"
                            android:layout_height="48dp"
                            android:background="@drawable/button_selector"
                            android:text="@string/button_latpulldown"
                            android:textSize="14sp" />

                        <Space
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />
                    </LinearLayout>


                </androidx.constraintlayout.widget.ConstraintLayout>

                <LinearLayout
                    android:id="@+id/chart_name_text_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@id/exercise_button_box">

                    <TextView
                        android:id="@+id/chart_name_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="운동 이름"
                        android:textAlignment="center"
                        android:textSize="25sp" />
                </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/barLine_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_margin="10dp"
                android:paddingBottom="20dp"
                android:background="@drawable/rectangle_radius"
                app:layout_constraintTop_toBottomOf="@id/chart_name_text_container">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/barChart_box"
                    android:layout_width="350dp"
                    android:layout_height="300dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/rectangle_radius"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/barLine_box">

                    <FrameLayout
                        android:id="@+id/frameLayout_barChart"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <com.github.mikephil.charting.charts.BarChart
                            android:id="@+id/chart_bench"
                            android:layout_width="match_parent"
                            android:layout_height="300dp">

                        </com.github.mikephil.charting.charts.BarChart>

                        <com.github.mikephil.charting.charts.BarChart
                            android:id="@+id/chart_squat"
                            android:layout_width="match_parent"
                            android:layout_height="300dp">

                        </com.github.mikephil.charting.charts.BarChart>

                        <com.github.mikephil.charting.charts.BarChart
                            android:id="@+id/chart_dead"
                            android:layout_width="match_parent"
                            android:layout_height="300dp">

                        </com.github.mikephil.charting.charts.BarChart>

                        <com.github.mikephil.charting.charts.BarChart
                            android:id="@+id/chart_incline"
                            android:layout_width="match_parent"
                            android:layout_height="300dp">

                        </com.github.mikephil.charting.charts.BarChart>

                        <com.github.mikephil.charting.charts.BarChart
                            android:id="@+id/chart_legex"
                            android:layout_width="match_parent"
                            android:layout_height="300dp">

                        </com.github.mikephil.charting.charts.BarChart>

                        <com.github.mikephil.charting.charts.BarChart
                            android:id="@+id/chart_latpulldown"
                            android:layout_width="match_parent"
                            android:layout_height="300dp">

                        </com.github.mikephil.charting.charts.BarChart>
                    </FrameLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:layout_width="370dp"
                    android:layout_height="2dp"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_centerInParent="true"
                    android:background="#b6907f"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/lineChart_box"
                    android:layout_width="350dp"
                    android:layout_height="300dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="0dp"
                    android:background="@drawable/rectangle_radius"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/barChart_box">

                    <FrameLayout
                        android:id="@+id/frameLayout_lineChart"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <com.github.mikephil.charting.charts.LineChart
                            android:id="@+id/lineChart_bench"
                            android:layout_width="match_parent"
                            android:layout_height="300dp">
                        </com.github.mikephil.charting.charts.LineChart>

                        <com.github.mikephil.charting.charts.LineChart
                            android:id="@+id/lineChart_latpulldown"
                            android:layout_width="match_parent"
                            android:layout_height="300dp">
                        </com.github.mikephil.charting.charts.LineChart>

                        <com.github.mikephil.charting.charts.LineChart
                            android:id="@+id/lineChart_squat"
                            android:layout_width="match_parent"
                            android:layout_height="300dp">
                        </com.github.mikephil.charting.charts.LineChart>

                        <com.github.mikephil.charting.charts.LineChart
                            android:id="@+id/lineChart_dead"
                            android:layout_width="match_parent"
                            android:layout_height="300dp">
                        </com.github.mikephil.charting.charts.LineChart>

                        <com.github.mikephil.charting.charts.LineChart
                            android:id="@+id/lineChart_incline"
                            android:layout_width="match_parent"
                            android:layout_height="300dp">
                        </com.github.mikephil.charting.charts.LineChart>

                        <com.github.mikephil.charting.charts.LineChart
                            android:id="@+id/lineChart_legex"
                            android:layout_width="match_parent"
                            android:layout_height="300dp">
                        </com.github.mikephil.charting.charts.LineChart>

                    </FrameLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </FrameLayout>


    </androidx.core.widget.NestedScrollView>

</layout>